<Window x:Class="Wolfy.Windows.App.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wolfy.Windows.App"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="..." Height="150" Width="720"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <ProgressBar materialDesign:TransitionAssist.DisableTransitions="True" Name="ProgressBar" VerticalAlignment="Top" HorizontalAlignment="Center" Width="600" Height="40" Margin="0,10,0,0" />
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60">
            <Button Name="CancelBtn" Style="{DynamicResource MaterialDesignRaisedLightButton}" Content="{DynamicResource cancel}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="320"/>
        </Grid>
    </Grid>
</Window>
