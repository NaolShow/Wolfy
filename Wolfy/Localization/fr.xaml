<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Language properties -->
    <sys:String x:Key="lang_name">fr</sys:String>
    <sys:String x:Key="lang_display">Français</sys:String>
    
    <!-- General -->
    <sys:String x:Key="cancel">Annuler</sys:String>

    <!-- Updates -->
    <sys:String x:Key="update_ask" xml:space="preserve">Une nouvelle mise à jour est disponible.
Voulez vous l'installer ?
    
Version actuelle: {0}
Dernière version: {1}</sys:String>
    <sys:String x:Key="update_error" xml:space="preserve">Une erreur s'est produite, la mise à jour pourrait être corrompue. 
Cela peut être dû à votre connexion, veuillez vérifier que vous êtes connecté à Internet. 
Si vous êtes bien connecté à Internet, vous pouvez cliquer sur oui pour redémarrer la mise à jour.</sys:String>
    <sys:String x:Key="update_downloading">Téléchargement... {0} / {1} ({2}%)</sys:String>
    
</ResourceDictionary>