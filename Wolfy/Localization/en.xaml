<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Language properties -->
    <sys:String x:Key="lang_name">en</sys:String>
    <sys:String x:Key="lang_display">English</sys:String>

    <!-- General -->
    <sys:String x:Key="cancel">Cancel</sys:String>
    
    <!-- Updates -->
    <sys:String x:Key="update_ask" xml:space="preserve">A new update is available.
Do you want to install it?
    
Current version: {0}
Latest version: {1}</sys:String>
    <sys:String x:Key="update_error" xml:space="preserve">An error has occurred, the update could be corrupted. 
This may be due to your connection, please check that you are connected to the Internet. 
If you are well connected to the Internet, you can click on yes to restart the update.</sys:String>
    <sys:String x:Key="update_downloading">Downloading... {0} / {1} ({2}%)</sys:String>
    
</ResourceDictionary>